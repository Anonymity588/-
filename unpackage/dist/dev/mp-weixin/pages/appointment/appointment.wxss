}
.leaveBTout {
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #eaf1fa;
	box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.1);
	margin-bottom: 2px;
}
.leaveBT {
	/* 留言按钮 */
	text-align: center;
	display: flex;
